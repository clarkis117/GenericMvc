@using GenericMvcUtilities.ViewModels.Generic
@model PageViewModel

<section class="well">
	<header>
		<ul class="list-inline">
			<li><h2 class="text-primary">@Model.Title</h2></li>
			@if (Model.DisplayAction)
			{
				<li class="pull-right"><h2 class="text-primary">@Model.Action</h2></li>
			}
		</ul>
		<ul class="list-inline">
			<li><h4>@Model.Description</h4></li>
		</ul>
		<hr class="shadow-z-1 primarycolor" />
	</header>
	<div>
		@await Html.PartialAsync(Model.NestedViewPath, Model.Data)
	</div>
	<footer>
		<hr class="shadow-z-1 primarycolor" />
		<ul class="list-inline">
			<li><h5 class="text-primary">@Model.Title</h5></li>
			@if (Model.DisplayAction)
			{
				<li class="pull-right"><h5 class="text-capitalize">@Model.Action</h5></li>
			}
		</ul>
	</footer>
</section>