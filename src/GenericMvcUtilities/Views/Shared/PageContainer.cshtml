@using GenericMvcUtilities.ViewModels.Basic
@model PageViewModel

@{
	ViewData["Title"] = Model.ControllerName + " " + Model.Action;
}

<section class="well">
	<header class="row">
		<div class="col-md-6">
			<div class="pull-left">
				<h2 class="text-primary">@Model.Title</h2>
				<h4>@Model.Description</h4>
			</div>
		</div>
		<div class="col-md-6">
			<div class="pull-right">
				@if (Model.DisplayAction)
				{
					<h2 class="text-primary">@Model.Action</h2>
				}
			</div>
		</div>
	</header>
	<hr class="shadow-z-1 primarycolor" />
	@if (Model.Message != null)
	{
		@await Model.Message.RenderAsync(Html)
	}
	<div class="row">
		<div class="col-md-3">
			<div class="pull-left">
			</div>
		</div>
		<div class="col-md-9">
			<div class="pull-right">
			</div>
		</div>
	</div>
	@await Html.PartialAsync(Model.NestedViewPath, Model.Data)
	<hr class="shadow-z-1 primarycolor" />
	<footer class="row">
		<div class="col-md-6">
			<div class="pull-left">
				<h5 class="text-primary">@Model.Title</h5>
			</div>
		</div>
		<div class="col-md-6">
			<div class="pull-right">
				@if (Model.DisplayAction)
				{
					<h5>@Model.Action</h5>
				}
			</div>
		</div>
	</footer>
</section>