
@using System.Threading.Tasks
@model IEnumerable<GenericMvcUtilities.ViewModels.UserManager.IUserIndexView>

<table class="table table-striped table-responsive table-hover">
	<thead>
		<tr>
			<th>Id</th>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Email</th>
			<th>Date Registered</th>
			<th>Details</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
			{
			<tr>
				<td>
					<p>@item.Id</p>
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.FirstName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.LastName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Email)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.DateRegistered)
				</td>
				@if (item.ShowDetails)
				{
					<td>
						<a asp-controller="UserManager" asp-action="PendingUserDetails" asp-route-Id="@item.Id" class="text-primary">Details</a>
					</td>
				}
			</tr>
			}
	</tbody>
</table>